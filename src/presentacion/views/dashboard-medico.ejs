<div class="row">
    <div class="col-md-12">
        <h2 class="mb-4">Bienvenido, Dr. <%= usuario.nombre %></h2>
        <p class="lead">Especialidad: <%= usuario.especialidad %></p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Mis Citas</h3>
                
                <% if (citas && citas.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Paciente</th>
                                    <th>Fecha</th>
                                    <th>Hora</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% citas.forEach(cita => { %>
                                    <tr>
                                        <td><%= cita.paciente.nombre %></td>
                                        <td><%= new Date(cita.fecha).toLocaleDateString() %></td>
                                        <td><%= cita.hora %></td>
                                        <td>
                                            <span class="badge bg-<%= cita.estado === 'pendiente' ? 'warning' : (cita.estado === 'confirmada' ? 'success' : 'danger') %>">
                                                <%= cita.estado %>
                                            </span>
                                        </td>
                                        <td>
                                            <% if (cita.estado === 'pendiente') { %>
                                                <form action="/citas/<%= cita._id %>/estado" method="POST" style="display: inline;">
                                                    <input type="hidden" name="estado" value="confirmada">
                                                    <button type="submit" class="btn btn-success btn-sm">Confirmar</button>
                                                </form>
                                                <form action="/citas/<%= cita._id %>/estado" method="POST" style="display: inline;">
                                                    <input type="hidden" name="estado" value="cancelada">
                                                    <button type="submit" class="btn btn-danger btn-sm">Cancelar</button>
                                                </form>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-muted">No tienes citas programadas.</p>
                <% } %>
            </div>
        </div>
    </div>
</div> 