<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body text-center">
                <h2 class="card-title text-danger mb-4">¡Ups! Algo salió mal</h2>
                
                <% if (locals.error) { %>
                    <p class="lead mb-4"><%= error %></p>
                <% } else { %>
                    <p class="lead mb-4">Ha ocurrido un error inesperado.</p>
                <% } %>
                
                <a href="/" class="btn btn-primary">Volver al inicio</a>
            </div>
        </div>
    </div>
</div> 